<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/repair_make_mainTool"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBlue"
        app:titleTextColor="@color/colorWhite"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorGray_White"/>
        
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher_round"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/repair_name"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="业主（联系方式）"
                        android:textSize="16dp"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:id="@+id/repair_add"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="家庭住址"
                        android:textSize="16dp"
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorGray_White"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:background="@drawable/bottom_lay">

            <TextView
                android:text="报修类型"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"/>
            <View
                android:layout_width="140dp"
                android:layout_height="25dp"
                android:layout_gravity="center"/>
            <Spinner
                android:id="@+id/repair_spanner"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:gravity="right"
                android:entries="@array/spinnerxml">

            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:background="@drawable/bottom_lay">

            <TextView
                android:text="报修时间"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"/>
            <View
                android:layout_width="130dp"
                android:layout_height="25dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/repair_time"
                android:text="2018-03-16 17:30"
                android:textSize="18dp"
                android:textColor="@color/colorBlue"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center" />

        </LinearLayout>

        <TextView
            android:text="报修内容"
            android:textSize="17dp"
            android:paddingLeft="15dp"
            android:paddingTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="left"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="1dp"
            app:cardElevation="1dp">

            <EditText
                android:id="@+id/edit_neirong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="25dp"
                android:paddingTop="15dp"
                android:background="@null"
                android:inputType="textMultiLine"
                android:lineSpacingMultiplier="1.5"
                android:imeOptions="actionDone"
                android:textSize="15sp"
                android:hint="输入内容"
                android:textColor="@color/colorBlack"
                android:minLines="6"
                android:gravity="left|top"
                android:theme="@style/MyEditText" />

        </android.support.v7.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray_1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <Button
            android:id="@+id/repair_button_ok"
            android:text="提交"
            android:background="@color/colorGray_1"
            android:textSize="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
    </LinearLayout>

</LinearLayout>