<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:baselineAligned="false"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/user_regist_add_mainTool"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBlue"
        app:titleTextColor="@color/colorWhite"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_regist_add_mainTool"
            android:background="@color/colorWhite">
            <LinearLayout
                android:id="@+id/Linear_1"
                android:background="@drawable/bottom_lay"
                android:paddingLeft="1dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/user_regist_add_name"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:hint="业主姓名"
                    android:background="@null"
                    android:maxLength="20"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:theme="@style/MyEditText"
                    android:paddingBottom="2dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Linear_2"
                android:background="@drawable/bottom_lay"
                android:paddingLeft="1dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/Linear_1">
                <TextView
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小区 :  "
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:background="@drawable/selector_bg" />
                <Spinner
                    android:id="@+id/user_regist_add_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:entries="@array/spinner_xiaoqu" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"/>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/Linear_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bottom_lay">
                <TextView
                    android:paddingTop="3dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细地址 :                 "
                    android:textSize="15sp"
                    android:background="@drawable/bottom_lay"/>
                <EditText
                    android:id="@+id/user_regist_add_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="25dp"
                    android:paddingTop="10dp"
                    android:background="@null"
                    android:inputType="textMultiLine"
                    android:imeOptions="actionDone"
                    android:textSize="18sp"
                    android:hint="请输入详细地址"
                    android:paddingLeft="10dp"
                    android:minLines="3"
                    android:gravity="top"
                    android:theme="@style/MyEditText"/>

            </LinearLayout>

        </RelativeLayout>

</RelativeLayout>