<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/society_tucao_page_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/colorGray_White">
    <android.support.v7.widget.CardView
        android:id="@+id/society_tucao_page_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/society_tucao_page_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="25dp"
                android:paddingTop="15dp"
                android:background="@null"
                android:inputType="textMultiLine"
                android:lineSpacingMultiplier="1.5"
                android:textSize="18sp"
                android:minLines="4"
                android:gravity="top"
                android:theme="@style/MyEditText" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@drawable/top_lay">
                <TextView
                    android:id="@+id/society_tucao_page_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/society_tucao_page_sure"
                    android:text="确定"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>