<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/bottom_lay">
            <TextView
                android:text="访客姓名:"
                android:textSize="20sp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/code_auto_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:background="@null"
                android:maxLength="20"
                android:textSize="20sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:theme="@style/MyEditText" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal"
            android:background="@drawable/bottom_lay">
            <TextView
                android:text="访客性别:"
                android:textSize="20sp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
            <RadioGroup
                android:id="@+id/code_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <RadioButton
                    android:id="@+id/code_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="男" />
                <RadioButton
                    android:id="@+id/code_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="女"/>
            </RadioGroup>
        </LinearLayout>
        <RelativeLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:id="@+id/code_auto_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/code_cancel"
                android:layout_width="60dp"
                android:layout_height="30dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="关  闭"
                android:textColor="@color/colorWhite"
                android:layout_gravity="left"
                android:background="@drawable/button_shape_re"/>
            <Button
                android:id="@+id/code_ok"
                android:layout_width="60dp"
                android:layout_height="30dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="完  成"
                android:textColor="@color/colorWhite"
                android:layout_gravity="right"
                android:background="@drawable/button_shape_lo"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>