<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/mainTool"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBlue"
        app:titleTextColor="@color/colorWhite"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:paddingTop="6dp"
        android:id="@+id/pay_arrange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="缴费管理"
        android:textSize="20dp"
        android:background="@color/colorGray_White"/>

    <LinearLayout
        android:id="@+id/pay_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/pay_shadow"
            android:padding="8dp"
            android:gravity="center">
            <ImageButton
                android:id="@+id/pay_water"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/ic_shui"/>
            <TextView
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="水费"
                android:textColor="@color/colorBlack"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:background="@drawable/pay_shadow"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center">
            <ImageButton
                android:id="@+id/pay_electric"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/ic_dian"/>
            <TextView
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="电费"
                android:textColor="@color/colorBlack"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:background="@drawable/pay_shadow"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center">
            <ImageButton
                android:id="@+id/pay_gas"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/ic_shui"/>
            <TextView
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="天然气"
                android:textColor="@color/colorBlack"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center">
            <ImageButton
                android:id="@+id/pay_property"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/ic_wuye"/>
            <TextView
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="物业费"
                android:textColor="@color/colorBlack"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:paddingTop="6dp"
        android:id="@+id/pay_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="缴费记录"
        android:textSize="20dp"
        android:background="@color/colorGray_White"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_pay_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>